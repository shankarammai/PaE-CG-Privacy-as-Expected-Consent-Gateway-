{
  "manifest_version": 2,
  "name": "PaECG",
  "version": "0.1",
  "homepage_url": "https://privacy-as-expected.org/",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["jquery.js","content.js"]
  }],
  "browser_action": {
    "default_title": "PaECG",
    "browser_style": true,
    "default_popup": "popup/index.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ]
}